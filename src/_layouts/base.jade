//- Custom Configuration
block variables

block config
  //- Setup site's base URL to match the "baseUrl" key within `package.json`
  //- Otherwise default to relative pathing
  - var baseUrl = config.baseUrl || './'

include ../_modules/globalMenu

doctype html
<html class='no-js' lang='en'>

head
  meta(charset='utf-8')
  meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
  title Sample
  meta(name='description', content= 'A new Yeogurt application')
  meta(name='viewport', content='width=device-width, initial-scale=1.0')
  block stylesheets
    link(rel="stylesheet", href="//cloud.typenetwork.com/projects/1767/fontface.css/", type="text/css")
    link(rel='stylesheet', href= baseUrl + 'styles/main.css')

body
  #barba-wrapper
    .page-load-splash
      .page-load-splash__content.full-height
        .logo
          svg.svg-icon
            use(xlink:href="images/assets/SVGSpriteSheet.svg#logo")
        .page-load-splash__breakers
          .breaker
            svg.svg-icon
              use(xlink:href="images/assets/SVGSpriteSheet.svg#breaker-01")
          .breaker
            svg.svg-icon
              use(xlink:href="images/assets/SVGSpriteSheet.svg#breaker-02")
    .barba-container
      div(class=(page_class))
        block pre-menu-content
        #[+globalMenu(page_title)]


  block scripts
    script(src= baseUrl + 'scripts/main.js')

</html>
